            QI_CHECKLEVELEX:
               begin
                 Result := FALSE;
                 if pqc.IfParam = '>' then begin
                   Result := who.Abil.Level > pqc.IfTagVal;
                 end;
                 if pqc.IfParam = '>=' then begin
                   Result := who.Abil.Level >= pqc.IfTagVal;
                 end;
                 if pqc.IfParam = '<' then begin
                   Result := who.Abil.Level < pqc.IfTagVal;
                 end;
                 if pqc.IfParam = '<=' then begin
                   Result := who.Abil.Level <= pqc.IfTagVal;
                 end;
                 if pqc.IfParam = '=' then begin
                   Result := who.Abil.Level = pqc.IfTagVal;
                 end;
               end;
            QI_CHECKGAMEGOLD:  //¼ì²âÈËÎïÔª±¦
