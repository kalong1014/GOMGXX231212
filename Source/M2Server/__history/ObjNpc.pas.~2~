                  end;
                  if pqc.IfParam = '>=' then begin
                    Result := who.PotCash >= pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '<' then begin
                    Result := who.PotCash < pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '>=' then begin
                    Result := who.PotCash >= pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '=' then begin
                    Result := who.PotCash = pqc.IfTagVal;
                  end;
               end;
            QI_CHECKGAMEPOINT: // ¼ì²â»ý·Ö
                begin
