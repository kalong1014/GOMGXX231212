                  end;
                  if pqc.IfParam = '>=' then begin
                    Result := TUserHuman(who).iDay >= pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '<' then begin
                    Result := TUserHuman(who).iDay < pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '>=' then begin
                    Result := TUserHuman(who).iDay >= pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '=' then begin
                    Result := TUserHuman(who).iDay = pqc.IfTagVal;
                  end;;
               end;
            QI_CHECKSECONDCARD:
               begin
                  if pqc.IfParam = '>' then begin
                    Result := TUserHuman(who).SecondsCard > pqc.IfTagVal;
                  end;
                  if pqc.IfParam = '>=' then begin
                    Result := TUserHuman(who).SecondsCard >= pqc.IfTagVal;
                  end;
