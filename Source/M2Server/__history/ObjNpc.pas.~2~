var
   latesttakeitem: string;
   pcheckitem, puTemp: PTUserItem;
   batchlist: TStringList;
   batchdelay, previousbatchdelay: integer;
   bosaynow: Boolean;

   //6-11
   // Çø·Ö´óÐ¡µÄ¼ì²â
