{$ENDIF}
         pRec := SQLExecute(szQuery);
	       if (pRec <> nil ) and ( pRec.RecordCount > 0 ) then
         begin
		        nPCRoomIndex := Str_ToInt( pRec.Fields ['FLD_PCBANG'].Value, 0 );
            pRec.Close;
         end;
